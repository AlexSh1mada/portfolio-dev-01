---
import HTMLIcon from "./icons/HTML.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import CSSIcon from "./icons/CSS.astro";
import TailwindIcon from "./icons/Tailwind.astro";

/* border-2 border-blue-400 */

const TAGS = {
    HTML: {
        name: "HTML",
        class: "bg-[#8a4529] text-white",
        icon: HTMLIcon
    },
    JavaScript: {
        name: "JavaScript",
        class: "bg-[#8f8232] text-white",
        icon: JavaScriptIcon
    },
    CSS: {
        name: "CSS",
        class: "bg-[#003159] text-white", 
        icon: CSSIcon
    },
    Tailwind: {
        name: "CSS",
        class: "bg-[#003159] text-white",
        icon: TailwindIcon
    }
}

const PROJECTS = [
	{
		title: "Monkeytype Clone",
		description:
			"A Monkeytype clone application to measure accuracy and typing speed with quick 30 seconds challenges, displaying a random set of words in the screen where the player tries to accurately type said text as fast as possible. This project was great to work on programming logic.",
		link: "https://monkeytype.com",
		github: "#",
		image: "/public/projects/monkeytype.webp",
		tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript ],
	},
];
---

{
	PROJECTS.map(({ image, title, description, tags }) => (
		<article>
			<h3 class="text-xl font-semibold text-orange-400 mb-2">{title}</h3>
			<p class="mb-4">{description}</p>
			<ul class="flex gap-x-4 flex-row">
				{tags.map((tag) => (
					<li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 mb-4`}>
                            <tag.icon class="size-4"/>
                            {tag.name}
                        </span>
                    </li>
				))}
			</ul>
			<img
				class="rounded"
				src={image}
				alt={`Screenshot from the project ${image}`}
			/>
		</article>
	))
}
